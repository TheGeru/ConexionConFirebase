<%- include("../templates/encabezado")%>
<%- include("../templates/menu")%>

<div class="container mt-5">
<div class="container">
    <div class="card">
        <div class="card hearder">
            <h1>Usuarios 2</h1>
        </div>
        <div class="card body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Nombre</th>
                        <th>Usuario</th>
                        <th>Password</th>
                        <th>Foto</th>
                    </tr>
                </thead>
                <tbody>
                    <%
                      usuarios.forEach((usuario)=>{ 
                    %>
                    <tr>
                        <td><%= usuario.id %></td>
                        <td><%= usuario.nombre %></td>
                        <td><%= usuario.usuario %></td>
                        <td><%= usuario.password %></td>
                        <td><img src="/images/<%= usuario.foto %>" width="100px" alt="foto.jpg"></td>
                        <td>
                            <a href="/editar/<%= usuario.id%>">Editar</a>
                            <a href="/borrar/<%= usuario.id%>">Borrar</a>
                        </td>
                    </tr>
                    <%
                    });
                    %>
                </tbody>
            </table>
        </div>
        <div class="card footer"></div>
    </div>
</div>
