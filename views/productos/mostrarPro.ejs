<%- include("../templates/encabezado")%>
<%- include("../templates/menuProd")%>

<div class="container mt-5">
  <div class="container">
    <div class="card">
      <div class="card-header">
        <h1>Productos</h1>
      </div>
      <div class="card-body">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>id</th>
              <th>Nombre</th>
              <th>Precio</th>
              <th>Foto</th>
            </tr>
          </thead>
          <tbody>
            <% productos.forEach((producto) => { %>
              <tr>
                <td><%= producto.id %></td>
                <td><%= producto.nombre %></td>
                <td><%= producto.precio %></td>
                <td><img src="/images/<%= producto.foto %>" width="100px" alt="foto.jpg"></td>
                <td>
                  <a href="/editarProducto/<%= producto.id %>">Editar</a>
                  <a href="/borrarProducto/<%= producto.id %>">Borrar</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <div class="card-footer"></div>
    </div>
  </div>
</div>

