<%- include("../templates/encabezado")%>
<%- include("../templates/menu")%>
<div class="container mt-5" >
    <form action="/editarProducto" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Modificar Producto</h1>
                <div class="card-body">
                    <input type="hidden" name="id" id="id" value="<%= producto.id %>">
                    <input  class = "form-control mb-3" type="text" value="<%= producto.nombre %>" name="nombre" id="nombre" placeholder="Nombre" autofocus>
                    <input  class = "form-control mb-3" type="text" value="<%= producto.precio %>" name="precio" id="precio" placeholder="Precio" autofocus>
                    <input  class = "form-control mb-3" type="file" value="<%= producto.foto %>" name="foto" id="foto">
                </div>
                <div class="card-footer">
                    <button class="form-control btn btn-primary" type="submit">Modificar</button>
                </div>
            </div>
        </div>
    </form>
</div>
